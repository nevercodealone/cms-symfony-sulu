{% extends "base.html.twig" %}

{% block content %}
    <div class="main">
        <div class="container-fluid py-5">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="chat-container">
                        {{ component('chat') }}
                        
                        <footer class="py-4 text-center">
                            <small class="text-muted">
                                Powered by <strong>Robot Golla</strong> - 
                                <a href="https://youtube.com/@NeverCodeAlone" target="_blank">Never Code Alone</a>
                            </small>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Reset chat functionality
            const resetButton = document.querySelector('#chat-reset');
            if (resetButton) {
                resetButton.addEventListener('click', function() {
                    if (confirm('Möchten Sie den Chat wirklich zurücksetzen?')) {
                        fetch('/chat/reset', { method: 'POST' })
                            .then(() => window.location.reload());
                    }
                });
            }
        });
    </script>
{% endblock %}