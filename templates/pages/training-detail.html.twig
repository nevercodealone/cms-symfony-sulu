{% extends "base-tailwind.html.twig" %}

{% block content %}
    {% set image = extension.excerpt.images[0].formats['edugate-page-title'] is defined ? extension.excerpt.images[0].formats['edugate-page-title'] : '/img/nca-matrix-default.jpg' %}

    <!-- Hero Section -->
    <section class="relative py-16 lg:py-24 mb-8">
        <div class="absolute inset-0 z-0">
            <img src="{{ image }}" alt="{{ content.title }}" class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-gray-900 opacity-60"></div>
        </div>
        <div class="relative z-10 text-center text-white">
            <h1 class="text-4xl lg:text-5xl font-extrabold tracking-tight mb-4">{{ content.title }}</h1>
            {% if extension.excerpt.teaser is defined %}
                <p class="text-lg lg:text-xl max-w-3xl mx-auto">{{ extension.excerpt.teaser }}</p>
            {% endif %}
        </div>
    </section>

    <!-- Main Content with Sidenav -->
    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Main Content Area -->
        <main class="flex-1 order-2 lg:order-1">
            <div class="bg-white rounded-lg shadow-sm p-6 lg:p-8">
                {% include 'includes/training-detail/blocks.html.twig' with {
                    content: content,
                    extension: extension,
                    id: id
                } %}
            </div>
        </main>

        <!-- Sidebar Navigation -->
        <aside class="w-full lg:w-80 order-1 lg:order-2">
            <div class="lg:sticky lg:top-8 space-y-6">
                <!-- Quick Navigation -->
                {% if content.blocks|default([])|length %}
                    {% set headlines = [] %}
                    {% for block in content.blocks %}
                        {% if block.type == 'hl-des' and block.headline is not empty %}
                            {% set headlines = headlines|merge([block]) %}
                        {% endif %}
                    {% endfor %}

                    {% if headlines|length > 0 %}
                        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">Inhaltsverzeichnis</h3>
                            </div>
                            <nav class="p-6" aria-label="Table of contents">
                                <ul class="space-y-2">
                                    {% for headline in headlines %}
                                        {% set htmlId = headline.headline|lower
                                            |replace({'ä': 'a', 'ö': 'o', 'ü': 'u', 'ß': 'ss'})
                                            |replace({' ': '-'})
                                            |replace({'/[^a-z0-9\\-]/': ''}) %}
                                        <li>
                                            <a href="#{{ htmlId }}"
                                               class="text-sm text-gray-600 hover:text-primary-700 hover:underline scroll-smooth">
                                                {{ headline.headline }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </nav>
                        </div>
                    {% endif %}
                {% endif %}

                <!-- Trainers Card -->
                {% if content.trainerItems is defined and content.trainerItems|length > 0 %}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">
                                {% set speakerHeadline = "Webdevelopment Trainer" %}
                                {% if content.speakerHeadline is defined and content.speakerHeadline is not empty %}
                                    {% set speakerHeadline = content.speakerHeadline %}
                                {% endif %}
                                {{ speakerHeadline }}
                            </h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                {% for trainer in content.trainerItems %}
                                    <div class="flex items-start space-x-4 {% if not loop.last %}pb-4 border-b border-gray-100{% endif %}">
                                        {% if trainer.avatar is defined and trainer.avatar.thumbnails['400x400'] is defined %}
                                            <img class="w-16 h-16 rounded-full object-cover"
                                                 src="{{ trainer.avatar.thumbnails['400x400'] }}"
                                                 alt="{{ trainer.fullName }}">
                                        {% else %}
                                            <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center">
                                                <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                                </svg>
                                            </div>
                                        {% endif %}
                                        <div class="flex-1">
                                            <h4 class="text-base font-semibold text-gray-900">{{ trainer.fullName }}</h4>
                                            {% if trainer.positionName is defined and trainer.positionName %}
                                                <p class="text-sm text-primary-600 font-medium">{{ trainer.positionName }}</p>
                                            {% endif %}
                                            {% if trainer.note is defined and trainer.note %}
                                                <p class="mt-2 text-sm text-gray-600">{{ trainer.note }}</p>
                                            {% endif %}

                                            {# Social Media Links #}
                                            {% if trainer.contactDetails is defined and trainer.contactDetails.socialMedia is defined and trainer.contactDetails.socialMedia is not empty %}
                                                <ul role="list" class="flex gap-3 mt-3 p-0" aria-label="Social Links">
                                                    {% for social in trainer.contactDetails.socialMedia %}
                                                        <li>
                                                            {% include 'includes/tailwind/link-social-media.html.twig' with {
                                                                socialLink: social.username,
                                                                fullName: trainer.fullName
                                                            } %}
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- Course Facts Card -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Kursinformationen</h3>
                    </div>
                    <div class="p-6">
                        {% if content.factItems is not empty %}
                            <dl class="space-y-4">
                                {% for item in content.factItems %}
                                    <div class="border-b border-gray-100 pb-4 last:border-0">
                                        <dt class="text-sm font-medium text-gray-500 mb-1">{{ item.headline }}</dt>
                                        <dd class="text-base text-gray-900">{{ item.description|raw }}</dd>
                                    </div>
                                {% endfor %}
                            </dl>
                        {% endif %}

                        {% if content.date is defined and content.date %}
                            <div class="mt-4 pt-4 border-t border-gray-100">
                                <div class="text-sm font-medium text-gray-500 mb-1">Termin</div>
                                <div class="text-base text-gray-900">{{ content.date|raw }}</div>
                            </div>
                        {% endif %}

                        {% if content.paymenturl is defined and content.paymenturl %}
                            <div class="mt-6">
                                <a href="{{ content.paymenturl }}"
                                   class="w-full inline-flex justify-center items-center px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300">
                                    Jetzt buchen
                                    <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </aside>
    </div>
{% endblock %}
