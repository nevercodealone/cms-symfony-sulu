{% if (content.headline is defined and content.headline is not empty) or (content.items is defined and content.items is not empty) %}
    <div>
        {% if content.headline is defined and content.headline is not empty %}
            <h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-6">{{ content.headline }}</h3>
        {% endif %}
        
        {% if content.items is defined and content.items is not empty %}
            <ul class="space-y-3">
                {% for item in content.items %}
                    <li class="flex items-start">
                        <svg class="flex-shrink-0 w-5 h-5 text-green-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-base text-gray-700">{{ item.item }}</span>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endif %}