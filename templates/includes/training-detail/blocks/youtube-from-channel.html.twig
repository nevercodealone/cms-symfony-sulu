{% if content.youTubeChannel is defined and content.youTubeChannel is not empty %}
    <div>
        {% if content.headline is defined and content.headline is not empty %}
            <h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-6">{{ content.headline }}</h3>
        {% endif %}
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% set videoList = youtube(content.youTubeChannel) %}
            {% set maxVideos = content.youTubeVideos|default(6) %}
            {% for video in videoList|slice(0, maxVideos) %}
                {% if video['snippet']['thumbnails']['medium']['url'] is defined and video['snippet']['thumbnails']['medium']['url'] is not empty %}
                    {% set videoId = video.snippet.resourceId.videoId %}
                    {% set videoTitle = video['snippet']['title'] %}
                    <div class="bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow overflow-hidden">
                        <div class="relative pb-[56.25%]">
                            <iframe 
                                class="absolute top-0 left-0 w-full h-full"
                                src="https://www.youtube.com/embed/{{ videoId }}"
                                title="{{ videoTitle }}"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                            </iframe>
                        </div>
                        <div class="p-4">
                            <h4 class="text-base font-medium text-gray-900 line-clamp-2">{{ videoTitle }}</h4>
                            {% if video['snippet']['description'] is defined %}
                                <p class="mt-2 text-sm text-gray-600 line-clamp-3">{{ video['snippet']['description'] }}</p>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}