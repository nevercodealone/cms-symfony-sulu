{% if content.buttons is defined and content.buttons is not empty %}
    <div class="flex flex-wrap gap-4 {% if content.align is defined and content.align == 'center' %}justify-center{% elseif content.align is defined and content.align == 'right' %}justify-end{% endif %}">
        {% for button in content.buttons %}
            {% if button.url is defined and button.url is not empty %}
                <a href="{{ button.url }}" 
                   {% if button.target is defined and button.target %}target="{{ button.target }}"{% endif %}
                   class="inline-flex items-center px-5 py-3 text-base font-medium text-center {% if button.style is defined and button.style == 'secondary' %}text-gray-900 bg-white border border-gray-300 hover:bg-gray-100{% else %}text-white bg-primary-700 hover:bg-primary-800{% endif %} rounded-lg focus:ring-4 focus:ring-primary-300">
                    {{ button.text|default('Click here') }}
                    {% if button.style is not defined or button.style != 'secondary' %}
                        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    {% endif %}
                </a>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}