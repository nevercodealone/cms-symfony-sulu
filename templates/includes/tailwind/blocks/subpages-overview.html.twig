<!-- subpages-overview.html.twig -->
<div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
  {% for item in content.items %}
    <article class="flex w-full flex-col items-start justify-between">
      <div class="group relative">
        <h2 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
          <a href="{{ sulu_content_path(item.url) }}">
            <span class="absolute inset-0"></span>
            {{ item.title }}
          </a>
        </h2>
        <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
          {{ item.seoDescription }}
        </p>
      </div>
      {% if item.excerptImages[0] is defined and item.excerptImages[0] is not empty %}
        {% set source = item.excerptImages[0].formats['tailwind-subpage-overview.webp'] %}
        {% set sourceSet = item.excerptImages[0].formats['content-full-half.webp'] %}
      {% else %}
        {% set source = '/uploads/media/1920x1080/09/479-nca-matrix-default.jpg' %}
      {% endif %}
        <img src="{{ source }}"
             srcset="{{ sourceSet }} 1023w"
             class="order-first h-auto w-full max-w-full"
             alt=""
        >
    </article>
  {% endfor %}
</div>
<!-- end subpages-overview.html.twig -->
