<!-- excerpt-image.html.twig -->
{% if extension.excerpt.images[0] is defined and extension.excerpt.images[0] is not empty %}
  {% set source = extension.excerpt.images[0].thumbnails['content-full.webp'] %}
  {% set sourceMeta = extension.excerpt.images[0].thumbnails['800x800.jpg']|split('?')[0] %}
  {% set sourcePinterest = extension.excerpt.images[0].thumbnails['pinterest.jpg']|split('?')[0] %}
  {% set sourceMastrodon = extension.excerpt.images[0].thumbnails['mastrodon.jpg']|split('?')[0] %}
  {% set alt = extension.excerpt.images[0].description %}
  <figure class="text-center">
    <img
      class="h-auto max-w-full mx-auto"
      src="{{ source }}"
      data-meta="https://nevercodealone.de{{ sourceMeta }}"
      data-pinterest="https://nevercodealone.de{{ sourcePinterest }}"
      data-mastrodon="https://nevercodealone.de{{ sourceMastrodon }}"
      alt=""
    >
    <figcaption class="pt-4 text-gray-900">{{ alt }}</figcaption>
  </figure>
{% endif %}
<!-- end excerpt-image.html.twig -->
