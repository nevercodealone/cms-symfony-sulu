<section class="bg-white dark:bg-gray-900">
    <div class="px-4 py-8 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-12">
        {% if loopIndex == 1 %}
          <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white tracking-tight">{{ content.headline }}</h1>
        {% else %}
          <h2 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white tracking-tight">{{ content.headline }}</h2>
        {% endif %}
        {% set source = content.image[0].formats['image-with-flags'] %}
        {% set title = content.image[0].title %}
        <img class="mx-auto w-full max-w-2xl rounded rounded-lg" src="{{ source }}" title="{{ title }}" alt="{{ title }}"/>
        {% if content.flags is defined and content.flags is not empty %}
            {% set current_locale = app.request.locale|split('_')[0] %}
