<section class="bg-gray-50 py-16 px-4 rounded-3xl">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <header class="text-center mb-12">
            {% if content.subline %}
                <p class="text-nca font-medium mb-3 tracking-wide uppercase text-sm">
                    {{ content.subline }}
                </p>
            {% endif %}
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                {{ content.headline }}
            </h2>
            {% if content.description %}
                <div class="text-gray-600 text-lg max-w-2xl mx-auto">
                    {{ content.description|raw }}
                </div>
            {% endif %}
        </header>

        <!-- Cards Grid -->
        {% set cardCount = content.cards|length %}
        <div class="grid grid-cols-1 {% if cardCount == 1 %}md:grid-cols-1 max-w-md mx-auto{% elseif cardCount == 2 %}md:grid-cols-2 max-w-3xl mx-auto{% else %}md:grid-cols-3{% endif %} gap-6">
            {% for card in content.cards %}
                {% if card.title is defined and card.title is not empty %}
                    {% if card.linkPage %}
                        <sulu-link href="{{ card.linkPage }}" class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl border-2 border-transparent hover:border-nca/30 block no-underline hover:no-underline cursor-pointer">
                    {% else %}
                        <div class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl border-2 border-transparent hover:border-nca/30">
                    {% endif %}
                        {# Badge #}
                        {% if card.badgeType != 'none' and card.badgeText %}
                            <span class="{% if card.badgeType == 'urgent' %}bg-red-500{% elseif card.badgeType == 'warning' %}bg-amber-500{% elseif card.badgeType == 'success' %}bg-emerald-500{% else %}bg-blue-500{% endif %} absolute -top-3 right-6 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg">
                                {{ card.badgeText }}
                            </span>
                        {% endif %}

                        {# Icon #}
                        <div class="w-16 h-16 bg-slate-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-nca transition-colors">
                            <svg class="w-8 h-8 text-gray-600 group-hover:text-white transition-colors" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                {{ icons[card.icon]|default(icons['code'])|raw }}
                            </svg>
                        </div>

                        {# Content #}
                        <h3 class="text-xl font-bold text-gray-900 mb-3">{{ card.title }}</h3>
                        <div class="text-gray-600 mb-6">{{ card.description|raw }}</div>

                        {# Tags #}
                        {% if card.tags is defined and card.tags is not empty %}
                            <div class="flex flex-wrap gap-2 mb-6">
                                {% for tag in card.tags %}
                                    <span class="text-xs font-medium bg-slate-100 text-gray-600 px-3 py-1.5 rounded-full">{{ tag.text }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {# Link text indicator #}
                        {% if card.linkText %}
                            <span class="flex items-center text-green-800 font-semibold">
                                {{ card.linkText }}
                                <svg class="w-4 h-4 ml-2 transition-transform duration-300 group-hover:translate-x-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    {{ icons['arrow-right']|raw }}
                                </svg>
                            </span>
                        {% endif %}
                    {% if card.linkPage %}
                        </sulu-link>
                    {% else %}
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>

        <!-- CTA Section -->
        <div class="text-center mt-12">
            {% if content.ctaText %}
                <p class="text-gray-800 mb-4">{{ content.ctaText }}</p>
            {% endif %}
            {% if content.ctaButtonPage and content.ctaButtonText %}
                <sulu-link href="{{ content.ctaButtonPage }}" class="inline-flex items-center text-black bg-gray-100 border-2 border-green-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-300 hover:text-white hover:bg-green-700 focus:text-white focus:bg-green-700 focus:outline-none focus:ring-2 focus:ring-white no-underline">
                    {{ content.ctaButtonText }}
                    <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </sulu-link>
            {% endif %}
        </div>
    </div>
</section>
