<!-- code.html.twig -->
{% set description = '' %}
{% if content.description is defined %}
  {% set description = content.description %}
{% endif %}

{% if item.code is defined %}
  {% set description = item.code %}
{% endif %}

{% if description is defined and description is not empty %}
  <div x-data="clipboardBlock" class="relative max-w-2xl mx-auto">
    <div class="bg-gray-900 text-white p-4 rounded-md">
      <div class="flex justify-between items-center mb-2">
        <span class="text-white">Code:</span>
        <button @click="copyCode" class="bg-gray-800 hover:bg-gray-700 text-white px-3 py-1 rounded-md">
          <span x-text="copied ? 'Copied!' : 'Copy'"></span>
        </button>
      </div>
      <div class="overflow-x-auto" tabindex="0">
        <pre x-ref="codeBlock">
          <code>{{ description|raw }}</code>
        </pre>
      </div>
    </div>
  </div>
{% endif %}
<!-- end code.html.twig -->
