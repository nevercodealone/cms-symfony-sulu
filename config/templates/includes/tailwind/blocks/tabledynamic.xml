<properties xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:xi="http://www.w3.org/2001/XInclude"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <block name="blocks" default-type="tabledynamic">
        <!-- @see https://docs.sulu.io/en/2.1/reference/content-types/block.html -->
        <types>
            <type name="tabledynamic">
                <meta>
                    <title>Dynamic Table</title>
                </meta>
    
                <properties>
                    <!-- Main Headline -->
                    <property name="headline" type="text_line">
                        <meta>
                            <title>Main Headline</title>
                        </meta>
                    </property>

                    <!-- Description -->
                    <property name="description" type="text_editor">
                        <meta>
                            <title>Description</title>
                        </meta>
                        <params>
                            <param name="table" value="false"/>
                            <param name="link" value="true"/>
                        </params>
                    </property>

                    <!-- Table Headers (flexible number of columns) -->
                    <block name="headers" default-type="header" minOccurs="1">
                        <meta>
                            <title>Table Headers</title>
                        </meta>
                        <types>
                            <type name="header">
                                <meta>
                                    <title>Column Header</title>
                                </meta>
                                <properties>
                                    <property name="header_text" type="text_line">
                                        <meta>
                                            <title>Header Text</title>
                                        </meta>
                                    </property>
                                </properties>
                            </type>
                        </types>
                    </block>

                    <!-- Table Rows (flexible number of rows) -->
                    <block name="rows" default-type="row" minOccurs="0">
                        <meta>
                            <title>Table Rows</title>
                        </meta>
                        <types>
                            <type name="row">
                                <meta>
                                    <title>Table Row</title>
                                </meta>
                                <properties>
                                    <!-- Flexible cells for each row -->
                                    <block name="cells" default-type="cell" minOccurs="1">
                                        <meta>
                                            <title>Row Cells</title>
                                        </meta>
                                        <types>
                                            <type name="cell">
                                                <meta>
                                                    <title>Cell</title>
                                                </meta>
                                                <properties>
                                                    <property name="cell_content" type="text_line">
                                                        <meta>
                                                            <title>Cell Content</title>
                                                        </meta>
                                                    </property>
                                                </properties>
                                            </type>
                                        </types>
                                    </block>
                                </properties>
                            </type>
                        </types>
                    </block>
                </properties>
            </type>
        </types>
    </block>
</properties>
